# BYOC Platform Configuration
# Copy this file to .env and fill in your values

# Pulumi settings
PULUMI_ACCESS_TOKEN=pul-xxxxxxxxxxxxxxxxxxxx
PULUMI_ORG=your-org-name
PULUMI_PROJECT=byoc-platform

# Git settings
GIT_REPO_URL=https://github.com/your-org/your-repo.git
GIT_REPO_BRANCH=main
GIT_REPO_DIR=.  # Subdirectory containing Pulumi.yaml (e.g., "infra" or "prod-automation")
GITHUB_TOKEN=ghp_xxxx  # Optional: for private repos only

# AWS credentials (from IAM user, NOT root account)
AWS_ACCESS_KEY_ID=AKIA...
AWS_SECRET_ACCESS_KEY=...
AWS_REGION=us-east-1
